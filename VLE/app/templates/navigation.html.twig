
{% block navigation %}


<nav class="navbar">
    <div class="container-fluid">
        <div class="navbar-header">
            {#if logged dash else landing if statement needed#}
            <a class="navbar-brand" href="">Virtual Learning Environment</a>
        </div>


        <ul class="nav navbar-nav navbar-right">
            <li><a href="{{ logout_page }}"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
            <li><a href="{{ profile }}"><span class="glyphicon glyphicon-user"></span> {{ name }}</a></li>
        </ul>

        {% if rank == 1 %}
            <ul class="nav navbar-nav navbar-right">
                <li><a href="">Student</a></li>
            </ul>
            {% elseif rank == 2 %}
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="">Teacher</a></li>
                </ul>
                {% elseif rank == 3 %}
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="">Administrator</a></li>
                    </ul>
                    {% elseif rank == 4 %}
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="">Super Administrator</a></li>
                        </ul>
                        {% else %}
                            {#Nothing#}
                            {% endif %}
    </div>
</nav>

{% endblock %}
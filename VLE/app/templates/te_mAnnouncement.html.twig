
{% block content %}
    <div class="container">
        {% include 'navigation.html.twig' %}

        {% include 'te_teacherNav.html.twig' %}

        <!-- Page Content Holder -->
        <div id="content">
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ home }}">Home</a>
                    <i class="icon-angle-right"></i>
                </li>
                <li><a href="{{ module_announcement }}?module={{ module }}">{{ module }} Announcements</a></li>
            </ul>

            <h2>{{ module }} Announcements:</h2>
            <div class="line"></div>
            <form>
                <div class="form-group">
                    <a href="#edit<?php echo $id;?>" data-toggle="modal">Create New Announcement: <button type='button' class='btn btn-success btn-sm'><span class='glyphicon glyphicon-plus' aria-hidden='true'></span></button></a>
                </div>
            </form>
            <div class="line"></div>
            {% if announcements is null %}
                <p>No Content Available at this time. Please check back soon.</p>
                <div class="line"></div>
            {% else %}
                {% for announcement in announcements %}
                    <h4>{{ announcement.dbAnnouncementTitle }}</h4>
                    <p>{{ announcement.dbDescription }}</p>
                    <p>{{ announcement.dbDate }}</p>

                    <a href="" data-target="#upModal" data-toggle="modal">
                        <label>Edit</label>
                    </a>
                    <a href="" data-target="#upModal2" data-toggle="modal">
                        <label style="padding-left: 5px;">Delete</label>
                    </a>
                    <div class="line"></div>
                    <div id="upModal" class="modal" tabindex="-1" role="dialog" aria-hidden="true" STYLE="top: 10px; width: 50%;left: 25%; right: 25%;">
                    </div>
                    <div id="upModal2" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                                    <div class="panel-heading">Upload your Assignment</div>
                                </div>
                                <div class="modal-body">
                                    <div class="col-md-12">
                                        <div class="panel panel-default">
                                            <div class="panel-body">
                                                <div class="text-center">
                                                    <div class="panel-body">
                                                        <form action="{{ action }}" method="{{ method }}">
                                                            <div class="form-group" style="text-align: left;">
                                                                <input type="file" name="upload" accept="application/pdf"/>
                                                            </div>
                                                            <input class="btn btn-lg btn-primary btn-default" value="Submit Your Assignment" type="submit">
                                                            {{ csrf.field| raw }}
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <div class="col-md-12">
                                        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    {% include 'footer.html.twig' %}
    </div>
{% endblock %}
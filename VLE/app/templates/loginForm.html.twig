
{% block login %}

    <div class="row">

        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Welcome Please Login</div>
                <div class="panel-body">
                    <!--    LOGIN  -->


                    <form action="{{ action }}" method="{{ method }}">

                        <h4>Login</h4>
                        <div class="form-group{{ errors.email ? ' has-error' : '' }}">
                            <label>Email:</label>
                            <input type="email" placeholder="e.g. alex@mail.com" name="email" value="{{ initial_input_box_value }}" class="form-control" >


                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">

                            <label>Password:</label>
                            <input type="password" placeholder="Enter Password" name="password" value="{{ initial_input_box_value }}" class="form-control"  >

                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>



                        <div class="form-group" style="text-align: center;">
                            <button type="submit" id="login" class="btn btn-default">Login</button>

                        </div>

                        <a href="{{ reset }}" id="reset">Forgot Password?</a>
                        {{ csrf.field| raw }}


                    </form>
                </div>

            </div>


        </div>
    </div>







{% endblock %}
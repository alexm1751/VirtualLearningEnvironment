
{% block page %}
<div class="container">
        {% include 'navigation.html.twig' %}

{% if rank == 1 %}
        {% include 'st_userNav.html.twig' %}
{% elseif rank == 2 %}
        {% include 'te_teacherNav.html.twig' %}
{% else %}
        {% include 'ad_adminNav.html.twig' %}
{% endif %}




        <!-- Page Content Holder -->
        <div id="content">

            <ul class="breadcrumb">
                <li>
                    <a href="{{ home }}">Home</a>
                    <i class="icon-angle-right"></i>
                </li>
                <li>
                <a href="{{ profile }}">Profile</a>
                </li>
            </ul>
            {#update user#}
            {% include 'messages.html.twig' %}


            <h2>Personal Information:</h2>

            <div class="line"></div>

            <h4>FullName</h4>
            <p>{{ details[0]['dbFullName'] }}</p>
            <br>
            <h4>Email</h4>
            <p>{{ details[0]['dbEmail'] }}</p>
            <br>
            <h4>Address</h4>
            <p>{{ details[0]['dbAddress'] }}</p>
            <br>
            <h4>Number</h4>
            <p>+44(0) {{ details[0]['dbNumber'] }}</p>
            <br>


            <div class="line"></div>

                <form href="#upModal"  data-toggle="modal">
                    <button type="submit" id="update" class="btn btn-default">Update</button>
                     {{ csrf.field| raw }}
                </form>
                <form href="#pwdModal"  data-toggle="modal">
                    <button type="submit" id="login" class="btn btn-default">Reset Password</button>
                    {{ csrf.field | raw }}
                </form>

                <div id="upModal" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            <div class="panel-heading">Update Your Details</div>
                        </div>
                        <div class="modal-body">
                            <div class="col-md-12">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <div class="text-center">

                                            <p>Please Enter new values for the fields which need updating.</p>
                                            <div class="panel-body">
                                                <form action="{{ action }}" method="{{ method }}">
                                                    <div class="form-group" style="text-align: left;">
                                                        <input type="hidden" name="id" value="2">
                                                        <label>Full Name:</label>
                                                        <input class="form-control" placeholder="" name="name" type="text" value="{{ details[0]['dbFullName'] }}">
                                                        {% if errors.name %}
                                                            <span class="help-block">{{ errors.name | first }}</span>
                                                        {% endif %}
                                                    </div>
                                                    <div class="form-group" style="text-align: left;">
                                                        <label>Address:</label>
                                                        <input class="form-control" placeholder="" name="address" type="text" value="{{ details[0]['dbAddress'] }}">
                                                        {% if errors.address %}
                                                            <span class="help-block">{{ errors.address| first }}</span>
                                                        {% endif %}
                                                    </div>
                                                    <div class="form-group" style="text-align: left;">
                                                        <label>Number:</label>
                                                        <input class="form-control" placeholder="" name="number" type="number" value="{{ details[0]['dbNumber'] }}">
                                                        {% if errors.number %}
                                                            <span class="help-block">{{ errors.number| first }}</span>
                                                        {% endif %}
                                                    </div>

                                                    <input class="btn btn-lg btn-primary btn-block" value="Update Your Details" type="submit">
                                                    {{ csrf.field| raw }}
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="col-md-12">
                                <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--modal password change-->
            <div id="pwdModal" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            <div class="panel-heading">Password Reset</div>
                        </div>
                        <div class="modal-body">
                            <div class="col-md-12">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <div class="text-center">

                                            <p>Please Enter your old password followed by the new one.</p>
                                            <div class="panel-body">
                                                <form action="{{ action2 }}" method="{{ method2 }}">
                                                    <input type="hidden" name="id" value="3">
                                                    <div class="form-group" style="text-align: left;">
                                                        <label>Old Password:</label>
                                                        <input class="form-control" placeholder="" name="old_password" type="password">
                                                        {% if errors.old_password %}
                                                            <span class="help-block">{{ errors.old_password | first }}</span>
                                                        {% endif %}
                                                    </div>
                                                    <div class="form-group" style="text-align: left;">
                                                        <label>New Password:</label>
                                                        <input class="form-control" placeholder="" name="password" type="password">
                                                        {% if errors.password %}
                                                            <span class="help-block">{{ errors.password | first }}</span>
                                                        {% endif %}
                                                    </div>
                                                    <div class="form-group" style="text-align: left;">
                                                        <label>Confirm New Password:</label>
                                                        <input class="form-control" placeholder="" name="password_confirm" type="password">
                                                        {% if errors.password_confirm %}
                                                            <span class="help-block">{{ errors.password_confirm | first }}</span>
                                                        {% endif %}
                                                    </div>

                                                    <input class="btn btn-lg btn-primary btn-block" value="Reset My Password" type="submit">
                                                    {{ csrf.field| raw }}
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="col-md-12">
                                <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {#Modal update user details#}


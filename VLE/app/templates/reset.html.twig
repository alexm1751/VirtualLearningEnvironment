{% block login %}
    <main class="main">
    <!--    INTRO -->
    <h3>Account Recovery</h3>

    <!--    LOGIN  -->
    <div class="forms">
    <section class="login">
        <form action="{{ action }}" method="{{ method }}">
            <fieldset>
                <h4>Password Reset</h4>

                <label>User Name or Email</label>
                <input type="text" placeholder="e.g. AlexMason123" name="reset" value="{{ initial_input_box_value }}" required>

                <button type="submit" id="login">Login</button>

            </fieldset>

        </form>
    </section>
{% endblock %}